{
  "manifest_version": 3,
  "name": "Flash Trading",
  "version": "1.0.0",
  "description": "Buy or sell assets from anywhere with Flash",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "http://localhost:4000/*",
    "https://flash-trading-simulator-production.up.railway.app/*"
  ]
}
